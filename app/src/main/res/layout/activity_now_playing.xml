<?xml version="1.0" encoding="utf-8"?>

<!--A very long song title or artist name can move buttons off the screen,
especially if the user has their font size set large. Scrollview keeps these
buttons accessible-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NowPlaying"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
   >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_to_music_library"
                android:layout_weight="1"
                android:layout_margin="24dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_to_main_screen"
                android:layout_weight="1"
                android:layout_margin="24dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="PLAYLIST"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"/>

    <TextView
        android:id="@+id/song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="SONG"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ARTIST"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:textAlignment="center"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"/>

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play/Pause"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Next"/>


</LinearLayout>
</ScrollView>